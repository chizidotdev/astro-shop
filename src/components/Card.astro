---
export interface Props {
  id: number;
  title: string;
  thumbnail: string;
  price: number;
}

const { price, id, thumbnail, title } = Astro.props;

export const formatter = new Intl.NumberFormat('en-US', {
  style: 'currency',
  currency: 'USD',
});

const formattedPrice = formatter.format(price);
---

<a
  href={`/product/${id}`}
  class='flex flex-col items-center justify-between gap-5 pb-5 border-b border-gray-400 hover:-translate-y-1 transition-all duration-300'
>
  <div class=''>
    <img src={thumbnail} alt={title} class='w-full h-32 object-cover' />
  </div>

  <div class='flex flex-col items-center cursor-pointer'>
    <h3 class='text-center'>
      {title}
    </h3>

    <p class='font-bold'>{formattedPrice}</p>
  </div>
</a>
